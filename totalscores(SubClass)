package Golf;
import java.awt.geom.Arc2D.Double;
import java.util.Scanner;

public class totalScores extends playerScores //SubClass
{
   
   public totalScores() // Constructor playerScores
   {
	   // Gathers the scores for each member of a specific team and adds them to get a totalScore
	   super();
	   System.out.println("Match 1:");
			this.totalScore1 = Score1 += Score2; //Totals the scores for team one
			System.out.println("Total score for Team 1: " + this.totalScore1 + "");
			
			this.totalScore2 = Score3 += Score4; //Totals the scores for team two
			System.out.println("Total score for Team 2: " + this.totalScore2+ "");
			 System.out.print(System.lineSeparator()); 
			 
		System.out.println("Match 2:");	 
			this.totalScore3 = Score5 += Score6; //Totals the scores for team three
			System.out.println("Total score for Team 3: " + this.totalScore3 + "");
			
			this.totalScore4 = Score7 += Score8; //Totals the scores for team four
			System.out.println("Total score for Team 4: " + this.totalScore4 + "");
			System.out.print(System.lineSeparator()); 
	   }
   
   
   public static void WinorLose() // WinorLose Static Method takes the totalScores added from the construct and determines the winners.
   {
	   if (totalScore1 < totalScore2) {
		 System.out.println("Team 1 wins the 1st match!!!");
	} 
	   else if (totalScore1 > totalScore2){
		  System.out.println("Team 2 wins the 1st match!!!");
	}
	   else if (totalScore1 == totalScore2) {
		  System.out.println("The 1st match ends with a tie!!!");
		  System.out.print(System.lineSeparator()); 
		  
	}	  
		  
	   if (totalScore3 < totalScore4) {
		  System.out.println("Team 3 wins the 2nd match!!!");
	} 
	   else if (totalScore3 > totalScore4){
		  System.out.println("Team 4 wins the 2nd match!!!");
	}
	   else if (totalScore3 == totalScore4) {
		  System.out.println("The 2nd match ends with a tie!!!");
		  
	}
}
   
  {
}	
   {	
 }   
	   
